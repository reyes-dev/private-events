<%= form_with model: @event do |event| %>
  <div class="field">
    <%= event.label :name, "Edit name of event:" %><br />
    <%= event.text_field :name %>  
  </div>

  <div class="field">
    <%= event.label :location, "Edit location of event:" %><br />
    <%= event.text_field :location %>  
  </div>

  <div class="field">
    <%= event.label :date, "Edit date of event:" %><br />
    <%= event.datetime_local_field :date %>  
  </div>
  
  <div class="actions">
    <%= event.submit "Create" %>  
  </div>
<% end %>